#!/usr/bin/env bash
# This Bash script that pings an IP adress passed as an argument.
if [ $# -ne 1 ]; then
    echo "Usage: 5-is_the_host_on_the_network {IP_ADDRESS}"
    exit 1
fi
#get the IP address from the command line argument
ip_address=$1

#ping the IP address 5 times
ping -c 5 "$ip_address"
